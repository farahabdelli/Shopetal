
{% extends 'baseBack.html.twig' %}
{% block main %}

    <td><a href="{{path('ajouter_livreur')}}" class="btn btn-primary">Ajouter un livreur</a></td>
    <br><br>

<h2>Liste des livreurs</h2>
    <br><br>

    <table class="table table-striped table-hover ">
        <thead>
        <tr>

            <th>Nom et prénom</th>
            <th>Mail</th>
            <th>Téléphone</th>
            <th>Disponibilité</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>

            {% for i in m %}
        <tr>

            <td>{{ i.nomLivreur }}</td>
            <td>{{ i.mailLivreur}}</td>
            <td>{{ i.telLivreur }}</td>
            <td>{{ i.disponibilite }}</td>

            <td> <a href="{{ absolute_url(asset('')) }}app_dev.php/Back/supprimerLivreur/{{ i.idLivreur }}" class="btn btn-danger" onclick="return confirmDelete(this)" >Supprimer</a> </td>
            <td> <a href="{{ absolute_url(asset('')) }}app_dev.php/Back/modifierLivreur/{{ i.idLivreur }}" class="btn btn-warning" >Modifier</a> </td>

        </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}