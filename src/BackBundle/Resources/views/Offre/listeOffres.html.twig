
{% extends 'baseBack.html.twig' %}
{% block main %}

    <td><a href="{{path('ajouterOffre')}}" class="btn btn-primary">Ajouter une offre</a></td>
    <br><br>

<h2>Liste des offres</h2>
    <br><br>

    <table class="table table-striped table-hover ">
        <thead>
        <tr>

            <th> id offre</th>
            <th>Categorie</th>
            <th>Cible</th>
            <th>Taux</th>
            <th>Date debut</th>
            <th>Date fin</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>

            {% for i in m %}
        <tr>

            <td>{{ i.id}}</td>
            <td>{{ i.categorie}}</td>
            <td>{{ i.cible }}</td>
            <td>{{ i.taux }}</td>
            <td>{{ i.dateDebut |date }}</td>
            <td>{{ i.dateFin |date }}</td>

            <td> <a href="{{ absolute_url(asset('')) }}app_dev.php/Back/supprimerOffre/{{ i.id }}" class="btn btn-danger" >Supprimer</a> </td>
            <td> <a href="{{ absolute_url(asset('')) }}app_dev.php/Back/modifierOffre/{{ i.id }}" class="btn btn-warning" >Modifier</a> </td>

        </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}