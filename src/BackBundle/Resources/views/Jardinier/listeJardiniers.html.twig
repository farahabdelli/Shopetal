
{% extends 'baseBack.html.twig' %}
{% block main %}

    <td><a href={{path('ajouter_jardinier')}}>Ajouter un Jardinier</a></td>
    <br><br>


<h2>Liste des Jardiniers</h2>
    <br><br>

    <table class="table table-striped table-hover ">
        <thead>
        <tr>

            <th>Nom</th>
            <th>Prenom</th>
            <th>Adresse</th>
            <th>Téléphone</th>
            <th>Disponibilité</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>

            {% for i in m %}
        <tr>

            <td>{{ i.nom }}</td>
            <td>{{ i.prenom}}</td>
            <td>{{ i.adresse }}</td>
            <td>{{ i.numero }}</td>
            <td>{{ i.disponibilite }}</td>

            <td> <a href="{{ absolute_url(asset('')) }}app_dev.php/Back/supprimerJardinier/{{ i.id }}" class="btn btn-danger" >Supprimer</a> </td>
            <td> <a href="{{ absolute_url(asset('')) }}app_dev.php/Back/modifierJardinier/{{ i.id }}" class="btn btn-warning" >Modifier</a> </td>

        </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}