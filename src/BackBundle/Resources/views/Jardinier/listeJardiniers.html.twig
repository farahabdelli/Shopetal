
{% extends 'baseBack.html.twig' %}
{% block main %}
    <script type="text/javascript" src="{{asset('js/jquery.js')}}">
    </script>

    <script >


        $(document).ready(function () {







            $('tr').click(function(){
                var col_val = $(this).find("td:eq(0)").text();
                var dest = 'details_jardinier/';
                window.open(dest.concat(col_val), '_blank');
                return false;

            });
            var btn1 = document.getElementById("btn1");
            var btn2 = document.getElementById("btn2");
            btn1.addEventListener("click", function (ev) {

                ev.stopPropagation();
            }, true);

            btn2.addEventListener("click", function (ev) {

                ev.stopPropagation();
            }, true);

        });
    </script>
    <td><a href={{path('ajouter_jardinier')}} class="btn btn-add" > Ajouter un Jardinier </a></td>
    <br><br>


<h2>Liste des Jardiniers</h2>
    <br><br>

    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Adresse</th>
            <th>Téléphone</th>
            <th>Disponibilité</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>

            {% for i in m %}
        <tr>
            <td>{{ i.id }}</td>
            <td>{{ i.nom }}</td>
            <td>{{ i.prenom}}</td>
            <td>{{ i.adresse }}</td>
            <td>{{ i.numero }}</td>
            <td>{{ i.disponibilite }}</td>

            <td> <a id="btn1" href="{{ absolute_url(asset('')) }}app_dev.php/Back/supprimerJardinier/{{ i.id }}" class=" btn btn-danger" >Supprimer</a> </td>
            <td> <a id="btn2" href="{{ absolute_url(asset('')) }}app_dev.php/Back/modifierJardinier/{{ i.id }}" class=" btn btn-warning" >Modifier</a> </td>

        </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}